---
import { getCollection } from 'astro:content';

import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

import Logo from '../components/Logo.astro';
import BookCover from '../components/BookCover.astro';
import BookShelf1 from '../components/BookShelf_1.astro';
import BookShelf3 from '../components/BookShelf_3.astro';
import BookShelf8 from '../components/BookShelf_8.astro';

import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

// Books
const books = (await getCollection('books')).sort(
	(a, b) => b.data.addDate.valueOf() - a.data.addDate.valueOf(),
);

---

<!doctype html>
<html lang="ja">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body class={`p-2 bg-neutral-200 text-neutral-900`}>
		<Header />
		<main>
			<div class={`
				ponShelf py-4 
				text-vertical 
				border-b border-neutral-300
				gap-2`}>
				<Logo />
				<p class={`text-sm`}>
					ようこそ、いらっしゃいませ。週末は突然の雪景色。寒いのは嫌ですけど、雪が振ると少しうれしくなります。普段は絶対触らないような、道端に積もった雪を、拾い集めて、雪だるまをつくり遊びました。
				</p>
				<BookCover isbn={books[0].data.isbn} title={books[0].data.title} />
			</div>
			<BookShelf3
				books={[books[1], books[2], books[3]]}
				/>
			<BookShelf1
				book={books[4]}
				text="ようこそ、いらっしゃいませ。週末は突然の雪景色。寒いのは嫌ですけど、雪が振ると少しうれしくなります。普段は絶対触らないような、道端に積もった雪を、拾い集めて、雪だるまをつくり遊びました。今日は泥だらけの靴で息子が帰ってきました。「大変だ」と言って帰ってきました。"
				/>
			<BookShelf8
				books={[
					books[0], books[2], books[1], books[4], books[3],
					books[0], books[2], books[1], books[4], books[3],
				]}
				/>
			<BookShelf8
				books={[
					books[3], books[4], books[1], books[2], books[0],
					books[0], books[2], books[1], books[4], books[3],
				]}
				/>
		</main>
		<Footer />
	</body>
</html>
