---
const { books } = Astro.props;

import BookCover from './BookCover.astro';
---

<div class={`
  ponShelf ponShelf-m text-vertical 
  w-full py-4 
  border-b border-neutral-300
  overflow-x-auto
  gap-2`}>
  {
    books.map(book => (
        <BookCover isbn={book.data.isbn} title={book.data.title} />
      )
    )
  }
</div>